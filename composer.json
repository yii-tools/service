{
    "name": "forge/service",
    "type": "library",
    "description": "Servicios reutilizables para aplicaciones Yii3.",
    "keywords": [
        "yii",
        "servicios"
    ],
    "license": "BSD-3-Clause",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "psr/http-message": "^1.0",
        "psr/log": "^3.0",
        "yiisoft/aliases": "^3.0",
        "yiisoft/data-response": "^1.0",
        "yiisoft/mailer-symfony": "^2.0",
        "yiisoft/translator": "^1.0"
    },
    "require-dev": {
        "nyholm/psr7": "^1.3.0",
        "phpunit/phpunit": "*",
        "roave/infection-static-analysis-plugin": "*",
        "vimeo/psalm": "*",
        "yiisoft/di": "^1.0",
        "yiisoft/log": "^2.0",
        "yiisoft/translator-formatter-intl": "^1.0",
        "yiisoft/translator-message-php": "^1.0",
        "yiisoft/yii-event": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Forge\\Service\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Forge\\Service\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "common": [
                "common/*.php"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    }
}
