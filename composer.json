{
    "name": "yii-tools/service",
    "type": "library",
    "description": "Service for YiiFramework v.3.0.",
    "keywords": [
        "yii-tools",
        "service",
        "yii3"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.1",
        "ext-fileinfo": "*",
        "psr/log": "^3.0",
        "psr/http-factory": "^1.0.1",
        "psr/http-message": "^1.0",
        "yiisoft/aliases": "^3.0",
        "yiisoft/arrays": "^3.0",
        "yiisoft/data-response": "^2.0",
        "yiisoft/mailer-symfony": "^3.0",
        "yiisoft/mailer": "^5.0",
        "yiisoft/router-fastroute": "^3.0",
        "yiisoft/router": "^3.0",
        "yiisoft/session": "^2.0",
        "yiisoft/translator-message-php": "^1.1",
        "yiisoft/translator": "^3.0",
        "yiisoft/view": "^8.0"
    },
    "require-dev": {
        "httpsoft/http-message": "^1.0",
        "infection/infection": "^0.27",
        "maglnet/composer-require-checker": "^4.3",
        "phpunit/phpunit": "^10.1",
        "roave/infection-static-analysis-plugin": "^1.31",
        "vimeo/psalm": "^5.4",
        "yii-tools/support": "^1.0@dev",
        "yiisoft/config": "^1.3",
        "yiisoft/di": "^1.2",
        "yiisoft/log": "^2.0",
        "yiisoft/translator-message-php": "^1.1",
        "yiisoft/yii-event": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Service\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Service\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "application-params": "?application-params.php",
            "di": ["common/*.php"],
            "params": "common/params/*.php"
        },
        "config-plugin-environments": {
            "tests": {
                "di": [
                    "common/*.php",
                    "../tests/data/config/common/*.php"
                ],
                "di-web": [
                    "$di",
                    "web/*.php"
                ],
                "application-params": "../tests/data/config/application-params.php",
                "params":  "../tests/data/config/params.php"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true,
            "yiisoft/config": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
