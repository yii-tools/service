{
    "name": "yii-tools/service",
    "type": "library",
    "description": "Service for YiiFramework v.3.0.",
    "keywords": [
        "yii-tools",
        "service",
        "yii3"
    ],
    "license": "mit",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.0",
        "ext-fileinfo": "*",
        "psr/log": "^3.0",
        "yiisoft/aliases": "^2.0",
        "yiisoft/arrays": "^3.0",
        "yiisoft/data-response": "^1.0",
        "yiisoft/mailer": "^5.0",
        "yiisoft/mailer-symfony": "^2.1",
        "yiisoft/translator": "^2.2"
    },
    "require-dev": {
        "maglnet/composer-require-checker": "^4.3",
        "phpunit/phpunit": "^9.5",
        "roave/infection-static-analysis-plugin": "^1.28",
        "vimeo/psalm": "^5.4",
        "yii-tools/support": "^1.0@dev",
        "yiisoft/di": "^1.2",
        "yiisoft/log": "^2.0",
        "yiisoft/translator-message-php": "^1.1",
        "yiisoft/yii-event": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Yii\\Service\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Yii\\Service\\Tests\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "config-plugin-options": {
            "source-directory": "config"
        },
        "config-plugin": {
            "common": [
                "common/*.php"
            ],
            "parameters": [
                "?parameters.php"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "check-dependencies": "composer-require-checker",
        "mutation": "roave-infection-static-analysis-plugin",
        "psalm": "psalm",
        "test": "phpunit"
    }
}
